<%- include('partials/header'); -%>

    <div class="container home">
        <h1>Your Product List:</h1>

        <a href="/create">Create New</a>
        <% img.forEach((obj,index)=>{%>
            <table class="table table-bordered">
                <%if(index===0){%>
                    <thead class="thead-dark">
                        <th>Name</th>
                        <th>Image</th>
                        <th>Brand</th>
                        <th>View</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </thead>
                    <%}%>
                        <tr>
                            <td>
                                <%=obj.name%>
                            </td>

                            <td>
                                <img src="data:obj/<%=obj.image.contentType%>;base64,
                        <%=obj.image.data.toString('base64')%>" width="100px" height="100px" />
                            </td>

                            <td>
                                <%=obj.brand%>
                            </td>

                            <td>
                                <a href=" view/<%= obj.id%>">View</a>
                            </td>
                            <td>
                                <a href="edit/<%= obj.id%>">Edit</a>
                            </td>
                            <td>
                                <a href="delete/<%=obj.id%>" onclick="confirm()">Delete</a>
                            </td>
                        </tr>
                        </tbody>
            </table>
            <%})%>
                <br /><br />
    </div>

    <script type="text/javascript">
        function confirm()
        {
            alert("data saved successfully");
        }
    </script>